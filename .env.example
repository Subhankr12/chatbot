# Application Settings
APP_NAME=Chatbot Platform
APP_VERSION=1.0.0
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://chatbot_user:chatbot_pass@localhost:5432/chatbot_platform

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# NLP Models
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
SPACY_MODEL=en_core_web_sm

# OpenAI (Optional - for enhanced NLP capabilities)
OPENAI_API_KEY=

# Vector Database
VECTOR_DB_PATH=./data/vector_db

# File Storage
UPLOAD_DIR=./data/uploads
MODELS_DIR=./data/models

# API Configuration
API_V1_STR=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8080"]

# Training Configuration
MAX_TRAINING_EXAMPLES=10000
MIN_CONFIDENCE_THRESHOLD=0.7